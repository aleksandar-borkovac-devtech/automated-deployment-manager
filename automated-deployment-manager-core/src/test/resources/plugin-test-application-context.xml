<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jcl="http://www.xeustechnologies.org/schema/jcl"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.xeustechnologies.org/schema/jcl http://www.xeustechnologies.org/schema/jcl/jcl.xsd">

	<bean id="pluginManager" class="nl.tranquilizedquality.adm.core.business.plugin.PluginManagerImpl">
		<property name="pluginDirectory" value="plugins/" />
	</bean>

	<bean id="pluginLocation" class="java.lang.String">
		<constructor-arg>
			<value>plugins/</value>
		</constructor-arg>
	</bean>

</beans>
